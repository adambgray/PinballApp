@model PinballTourneyApp.ViewModels.AddTournamentViewModel

<h1>Add Venue</h1>

<form asp-controller="Tournament" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="VenueID"></label>
        <select asp-for="VenueID" asp-items="Model.Venues"></select>
    </div>




    <input type="submit" value="Add Tournament" />

</form>